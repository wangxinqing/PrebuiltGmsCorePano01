<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/guidance_container" android:layout_width="@dimen/system_update_pano_gsf_guidance_width" android:layout_height="match_parent" android:layout_alignParentStart="true" style="?attr/guidanceContainerStyle">
        <Space android:id="@+id/guidance_space" android:layout_width="match_parent" android:layout_height="140dp" android:layout_alignParentTop="true"/>
        <TextView android:id="@+id/guidance_title" android:layout_below="@+id/guidance_space" android:importantForAccessibility="yes" android:textDirection="locale" android:textAlignment="viewStart" android:layout_alignParentStart="true" style="?attr/guidanceTitleStyle"/>
        <TextView android:id="@+id/guidance_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/guidance_title" android:layout_alignWithParentIfMissing="true" android:importantForAccessibility="yes" android:textAlignment="viewStart" style="?attr/guidanceDescriptionStyle"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="@dimen/system_update_pano_gsf_action_width" android:layout_height="match_parent" android:paddingStart="20dp" android:paddingEnd="50dp" android:layout_alignParentEnd="true">
        <Space android:layout_width="match_parent" android:layout_height="170dp"/>
        <TextView android:id="@+id/action_button" style="@style/SystemUpdatePanoActionButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
