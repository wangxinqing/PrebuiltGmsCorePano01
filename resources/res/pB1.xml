<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/controller_layout" android:layout_width="match_parent" android:layout_height="144dp" android:layout_marginEnd="48dp">
    <TextView android:textAppearance="@style/PlaybackControls.Duration" android:gravity="start" android:id="@+id/controller_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    <SeekBar android:id="@+id/controller_seekBar" android:focusable="false" android:layout_width="match_parent" android:layout_height="8dp" android:progressDrawable="@drawable/ic_playback_seek_bar" android:thumb="@drawable/ic_playback_knob" android:thumbOffset="3dp" android:layout_centerVertical="true" android:paddingStart="4dp" android:paddingEnd="4dp" android:layout_marginStart="44dp" android:layout_toStartOf="@+id/controller_duration"/>
    <TextView android:textAppearance="@style/PlaybackControls.CurrentTime" android:gravity="center" android:id="@+id/controller_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:singleLine="true" android:layout_above="@+id/controller_seekBar" android:layout_alignParentStart="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/play_pause_wrapper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/controller_seekBar" android:layout_centerHorizontal="true">
        <com.google.android.pano.widget.SeekButton android:id="@+id/controller_rw" android:layout_width="wrap_content" android:layout_height="@dimen/playback_icon_size" app:inactiveScale="0.73" app:seekDirection="2" app:seekIcon="@drawable/ic_playback_scrub_rwd" app:seekStretchIcon="@drawable/ic_playback_scrubber_line_reverse"/>
        <ImageButton android:id="@+id/controller_prev" android:background="@android:color/transparent" android:layout_width="@dimen/playback_icon_size" android:layout_height="@dimen/playback_icon_size" android:src="@drawable/ic_playback_rwd"/>
        <ImageButton android:id="@+id/controller_playpause" android:background="@android:color/transparent" android:layout_width="@dimen/playback_icon_size" android:layout_height="@dimen/playback_icon_size" android:src="@drawable/ic_playback_play"/>
        <ImageButton android:id="@+id/controller_next" android:background="@android:color/transparent" android:layout_width="@dimen/playback_icon_size" android:layout_height="@dimen/playback_icon_size" android:src="@drawable/ic_playback_fwd"/>
        <com.google.android.pano.widget.SeekButton android:id="@+id/controller_ffw" android:layout_width="wrap_content" android:layout_height="@dimen/playback_icon_size" app:inactiveScale="0.73" app:seekDirection="1" app:seekIcon="@drawable/ic_playback_scrub_fwd" app:seekStretchIcon="@drawable/ic_playback_scrubber_line"/>
    </LinearLayout>
</RelativeLayout>
