            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="70dp" android:layout_marginLeft="16dp" android:layout_marginTop="9dp" android:layout_marginRight="16dp" app:cardBackgroundColor="?attr/ghf_surfaceColor" app:cardCornerRadius="8dp">
