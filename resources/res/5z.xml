        </LinearLayout>
        <ProgressBar android:layout_gravity="center" android:id="@+id/gf_progress" android:visibility="gone" android:layout_width="@android:dimen/app_icon_size" android:layout_height="@android:dimen/app_icon_size" style="?android:attr/progressBarStyleLarge"/>
    </FrameLayout>
</ScrollView>
