                        <TextView android:textSize="@dimen/gf_pii_main_text_size" android:textColor="?attr/gf_primaryTextColor" android:id="@+id/gf_pii_text_logs" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/gf_pii_text_logs" android:textDirection="locale" style="@style/gf_PiiMainTextFontStyle"/>
