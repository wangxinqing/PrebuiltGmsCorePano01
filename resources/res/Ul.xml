<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/icon" android:padding="8dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentTop="true" android:contentDescription="@string/plus_manage_moment_image_desc" style="@style/plus_ManageButton"/>
    <RelativeLayout android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toEndOf="@+id/icon">
        <TextView android:textSize="18sp" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
        <TextView android:textSize="18sp" android:id="@+id/time_acl" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/title" style="@style/plus_AppsTextSecondary"/>
    </RelativeLayout>
</RelativeLayout>
