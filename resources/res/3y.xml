    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/gh_contact_option_container" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
