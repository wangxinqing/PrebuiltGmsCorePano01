<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <RelativeLayout android:id="@+id/gh_contact_card_title_section" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
        <TextView android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gh_menu_feedback_and_support" style="@style/gh_materialCardTitleStyle.rtlSupport"/>
