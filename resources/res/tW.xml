                <TextView android:text="@string/sharing_settings_data_usage_item_always" style="@style/Sharing.Settings.Button.Title"/>
                <TextView android:text="@string/sharing_settings_data_usage_item_always_description" style="@style/Sharing.Settings.Button.Description"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="?attr/selectableItemBackground" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="8dp">
                <TextView android:text="@string/sharing_settings_data_usage_item_wifi" style="@style/Sharing.Settings.Button.Title"/>
                <TextView android:text="@string/sharing_settings_data_usage_item_wifi_description" style="@style/Sharing.Settings.Button.Description"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="?attr/selectableItemBackground" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="8dp">
                <TextView android:text="@string/sharing_settings_data_usage_item_never" style="@style/Sharing.Settings.Button.Title"/>
                <TextView android:text="@string/sharing_settings_data_usage_item_never_description" style="@style/Sharing.Settings.Button.Description"/>
            </LinearLayout>
        </com.google.android.gms.nearby.sharing.view.RadioButtonChoiceView>
    </LinearLayout>
</ScrollView>
