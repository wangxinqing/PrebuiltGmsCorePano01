<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/main_view" android:paddingLeft="6dp" android:paddingTop="5dp" android:paddingRight="6dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
        <LinearLayout android:orientation="horizontal" android:paddingTop="-1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="true">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/total_size_prefix" android:paddingTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/storage_managment_icing_size_label" android:maxLines="1"/>
            <ImageView android:layout_gravity="bottom" android:layout_width="0dp" android:layout_height="1px" android:layout_marginLeft="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="4dp" android:src="@drawable/dotted_line_480px" android:scaleType="center" android:layout_weight="1" android:contentDescription="@null"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/total_size_text" android:paddingTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        </LinearLayout>
        <TextView android:layout_marginTop="8dp" android:text="@string/icing_storage_management_usage_label" style="?android:attr/listSeparatorTextViewStyle"/>
        <ListView android:id="@+id/apps_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/empty_list_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ProgressBar android:layout_gravity="center" android:id="@+id/icing_progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?attr/indeterminateProgressStyle"/>
</merge>
