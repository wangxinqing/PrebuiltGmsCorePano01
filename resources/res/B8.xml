<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Account:"/>
        <Spinner android:id="@+id/menagerie_settings_account_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button android:id="@+id/menagerie_settings_full_sync" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Full Sync"/>
    <Button android:id="@+id/menagerie_settings_periodic_sync" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Periodic Sync"/>
    <Button android:id="@+id/menagerie_settings_initial_sync" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Initial Sync"/>
    <Button android:id="@+id/menagerie_settings_tickle_sync" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tickle Sync"/>
</LinearLayout>
