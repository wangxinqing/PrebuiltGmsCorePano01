<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/as_message_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:textIsSelectable="false" style="@style/AsDialogTitle"/>
        <TextView android:id="@+id/as_message_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textIsSelectable="true" style="@style/AsDialogMessage"/>
    </LinearLayout>
    <com.google.android.gms.accountsettings.widget.ButtonBarLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="horizontal" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="24dp" android:paddingEnd="8dp" app:allowStacking="@bool/abc_allow_stacked_button_bar">
        <Button android:id="@+id/button_neutral" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/AsDialogButton"/>
        <android.widget.Space android:id="@+id/spacer" android:visibility="invisible" android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <Button android:id="@+id/button_negative" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/as_base_button_horizontal_margin" style="@style/AsDialogButton"/>
        <Button android:id="@+id/button_positive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/as_base_button_horizontal_margin" style="@style/AsDialogButton"/>
    </com.google.android.gms.accountsettings.widget.ButtonBarLayout>
</LinearLayout>
