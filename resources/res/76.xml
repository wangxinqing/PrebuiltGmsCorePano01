<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/dropdown_text_item" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/dropdown_item_image" android:paddingTop="16dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:paddingStart="16dp"/>
        <TextView android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/dropdown_item_text" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/TextAppearance.Material.Menu"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/dropdown_header_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/accounts_header" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
