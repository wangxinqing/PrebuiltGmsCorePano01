<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp">
        <LinearLayout android:orientation="horizontal" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
            <ImageView android:layout_gravity="center" android:id="@+id/device_icon" android:background="@android:color/transparent" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_device_placeholder_48" android:contentDescription="@string/plus_manage_app_app_icon_desc"/>
            <TextView android:layout_gravity="center_vertical" android:id="@+id/device_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:textIsSelectable="false" android:layout_marginStart="8dp" style="@style/plus_AppsTextPrimary"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="72dp" android:paddingEnd="16dp">
            <TextView android:id="@+id/plus_manage_app_device" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/plus_manage_app_scopes_label" style="@style/plus_AppsTextSecondary"/>
            <Button android:layout_gravity="right" android:id="@+id/disconnect_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="@string/plus_manage_device_disconnect_label" android:paddingStart="16dp" android:paddingEnd="16dp" android:layout_marginEnd="16dp" style="android:TextAppearance.Material.Button"/>
        </LinearLayout>
        <View android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
</ScrollView>
