<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/otp_dialog" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/auth_otp_ten_digit_code_header"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/otp_wheel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp">
            <ProgressBar android:id="@android:id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" style="?android:attr/progressBarStyle"/>
            <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/auth_otp_progress_dialog_message"/>
        </LinearLayout>
        <TextView android:id="@+id/otp_error" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/auth_otp_error"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/otp_results" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="24dp">
            <TextView android:textSize="13sp" android:textColor="#88000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/auth_otp_ten_digits_code1"/>
            <TextView android:textSize="44sp" android:textColor="#de000000" android:id="@+id/otp_code1" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="13sp" android:textColor="#88000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/auth_otp_ten_digits_code2"/>
            <TextView android:textSize="44sp" android:textColor="#de000000" android:id="@+id/otp_code2" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:id="@+id/otp_no_accounts_available" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/auth_otp_no_accounts_available_message"/>
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/auth_otp_ten_digit_usage_header"/>
        <TextView android:id="@+id/otp_explaination" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/auth_otp_ten_digit_explaination"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:text="@string/auth_otp_ten_digit_phishing_warning"/>
    </LinearLayout>
</ScrollView>
