<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/appinvite_search_frame" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="top" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/appinvite_margin" android:paddingEnd="@dimen/appinvite_margin">
        <FrameLayout android:gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <AutoCompleteTextView android:textSize="@dimen/appinvite_text_size_medium" android:textColor="@color/appinvite_dark_black" android:textColorHint="@color/appinvite_medium_black" android:layout_gravity="center_vertical" android:id="@+id/search" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:inputType="textPersonName" android:dropDownAnchor="@+id/appinvite_search_frame" android:imeOptions="actionUnspecified|actionGo|actionSend|actionDone|flagNoFullscreen|flagNoExtractUi" style="@style/appInviteTextStyleRegular"/>
            <TextView android:textSize="@dimen/appinvite_text_size_medium" android:textColor="@color/appinvite_medium_black" android:layout_gravity="center_vertical" android:id="@+id/search_text" android:paddingTop="@dimen/appinvite_section_spacing" android:paddingBottom="@dimen/appinvite_section_spacing" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/appInviteTextStyleRegular"/>
        </FrameLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/cancel" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/appinvite_cancel_search_description"/>
    </LinearLayout>
    <View android:id="@+id/separator" android:background="@color/appinvite_separator" android:layout_width="match_parent" android:layout_height="@dimen/appinvite_separator"/>
    <TextView android:textSize="@dimen/appinvite_text_size_small" android:textColor="@color/appinvite_medium_black" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/recipient_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/appinvite_margin" android:paddingEnd="@dimen/appinvite_margin" style="@style/appInviteTextStyleRegular"/>
</LinearLayout>
