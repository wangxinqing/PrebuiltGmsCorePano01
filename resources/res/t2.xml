<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/plus_solid_grey" android:layout_width="match_parent" android:layout_height="@dimen/plus_titlebar_height">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/up_button" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/common_SettingsActionBar.Button">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/up_button_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-4dp" android:layout_marginRight="-4dp" android:src="@drawable/common_ic_settings_back" android:contentDescription="@string/plus_actionbar_up_button_description" style="@style/common_SettingsActionBar.Up"/>
        <ImageView android:gravity="center_vertical" android:id="@+id/titlebar_icon_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/plus_icon_red_32" android:contentDescription="@string/plus_plus_icon_image_description" android:layout_alignParentStart="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/title_container" android:background="@drawable/common_settings_spinner_bg" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_centerVertical="true" android:layout_toEndOf="@+id/up_button">
        <TextView android:textSize="@dimen/plus_sharebox_share_title_text" android:textColor="@color/plus_sharebox_title_text" android:id="@+id/title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/plus_app_label"/>
        <Spinner android:ellipsize="end" android:id="@+id/account_spinner" android:background="@null" android:paddingLeft="0dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="12sp" android:id="@+id/plus_page_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button android:textSize="@dimen/plus_sharebox_share_button_text" android:textStyle="bold" android:textColor="@color/plus_sharebox_title_button" android:id="@+id/share_button" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/plus_titlebar_height" android:text="@string/plus_sharebox_share" android:drawablePadding="2dp" android:layout_alignParentTop="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" style="@style/common.Widget.SelectableItem"/>
</RelativeLayout>
