<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.gms.family.widget.ScrollToBottomView android:id="@+id/fm_product_intro_scrollview" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/fm_create_side_margin" android:paddingTop="@dimen/fm_create_top_margin" android:paddingRight="@dimen/fm_create_side_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.android.volley.toolbox.NetworkImageView android:layout_gravity="center_horizontal" android:id="@+id/fm_product_intro_layout_header_image" android:layout_width="@dimen/fm_product_intro_image_size" android:layout_height="@dimen/fm_product_intro_image_size"/>
                <TextView android:layout_gravity="center_horizontal" android:id="@+id/fm_product_intro_layout_header_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:textAlignment="center" style="@style/TextAppearance.FamilyManagement.Title"/>
                <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/fm_product_intro_layout_subheader_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:textAlignment="center" style="@style/TextAppearance.AppCompat.Subhead"/>
            </LinearLayout>
            <View android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="24dp"/>
            <TextView android:textColor="?android:attr/textColorPrimary" android:id="@+id/fm_product_intro_layout_body_text" android:paddingLeft="@dimen/fm_create_side_margin" android:paddingRight="@dimen/fm_create_side_margin" android:paddingBottom="@dimen/fm_create_bottom_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" style="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
    </com.google.android.gms.family.widget.ScrollToBottomView>
    <FrameLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="@dimen/fm_nav_bar_height">
        <Button android:layout_gravity="start" android:id="@+id/fm_product_intro_layout_skip_button" android:paddingLeft="@dimen/fm_create_side_margin" android:paddingRight="@dimen/fm_create_side_margin" android:layout_width="wrap_content" android:layout_height="match_parent" android:textAllCaps="true" style="@style/Widget.FamilyManagement.NavButton.ColorBackground"/>
        <Button android:layout_gravity="end" android:id="@+id/fm_product_intro_layout_continue_button" android:paddingLeft="@dimen/fm_create_side_margin" android:paddingRight="@dimen/fm_create_side_margin" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/Widget.FamilyManagement.NavButton.ColorBackground"/>
        <Button android:layout_gravity="center" android:id="@+id/fm_product_intro_layout_more_button" android:paddingLeft="@dimen/fm_create_side_margin" android:paddingRight="@dimen/fm_create_side_margin" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/Widget.FamilyManagement.NavButton.ColorBackground"/>
    </FrameLayout>
</LinearLayout>
