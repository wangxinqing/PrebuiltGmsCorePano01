<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" style="@style/SuwItemContainer">
    <FrameLayout android:gravity="start" android:layout_gravity="center_vertical" android:id="@+id/suw_items_icon_container" android:layout_width="@dimen/suw_items_icon_container_width" android:layout_height="wrap_content">
        <ImageView android:id="@+id/suw_items_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/suw_items_padding_bottom_extra" android:layout_weight="1">
        <com.android.setupwizardlib.view.RichTextView android:gravity="start" android:id="@+id/suw_items_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAlignment="viewStart" android:labelFor="@+id/suw_items_switch" style="@style/SuwItemTitle"/>
        <com.android.setupwizardlib.view.RichTextView android:gravity="start" android:id="@+id/suw_items_summary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAlignment="viewStart" style="@style/SuwItemSummary"/>
    </LinearLayout>
    <android.support.v7.widget.SwitchCompat android:layout_gravity="center_vertical" android:id="@+id/suw_items_switch" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/SuwSwitchStyle"/>
</LinearLayout>
