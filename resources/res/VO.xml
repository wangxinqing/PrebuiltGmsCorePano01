<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/fm_toolbar"/>
    <TextView android:id="@+id/fm_invitations_retry_error_title" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextAppearance.AppCompat.Subhead"/>
    <TextView android:textColor="?android:attr/textColorSecondary" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fm_invitations_text_invitations" style="@style/TextAppearance.AppCompat.Body1"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/fm_invitations_failed_list" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:overScrollMode="never"/>
    <FrameLayout android:background="@color/fm_navbar_background" android:layout_width="match_parent" android:layout_height="@dimen/fm_nav_bar_height">
        <Button android:layout_gravity="start" android:id="@+id/fm_invitations_skip_retry_button" android:paddingLeft="@dimen/fm_nav_button_padding" android:paddingRight="@dimen/fm_nav_button_padding" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/Widget.FamilyManagement.NavButton"/>
        <Button android:layout_gravity="end" android:id="@+id/fm_invitations_retry_now_button" android:paddingLeft="@dimen/fm_create_side_margin" android:paddingRight="@dimen/fm_create_side_margin" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/Widget.FamilyManagement.NavButton.ColorAccent"/>
    </FrameLayout>
</LinearLayout>
