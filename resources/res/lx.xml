<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns="https://developers.google.com/now/actions/1.1" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/guidance_container" android:layout_width="@dimen/system_update_pano_gsf_guidance_width" android:layout_height="match_parent" android:paddingStart="0dp" android:paddingEnd="0dp" style="?attr/guidanceContainerStyle">
        <Space android:id="@+id/guidance_space" android:layout_width="match_parent" android:layout_height="120dp" android:layout_alignParentTop="true"/>
        <TextView android:id="@+id/guidance_title" android:layout_below="@+id/guidance_space" android:importantForAccessibility="yes" android:textDirection="locale" android:textAlignment="viewStart" android:layout_alignParentStart="true" style="?attr/guidanceTitleStyle"/>
        <TextView android:id="@+id/guidance_description" android:layout_below="@+id/guidance_title" android:layout_alignWithParentIfMissing="true" android:importantForAccessibility="yes" android:textAlignment="viewStart" style="?attr/guidanceDescriptionStyle"/>
        <TextView android:gravity="end" android:layout_gravity="end" android:id="@+id/percentage_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="0dp" android:layout_below="@+id/guidance_description" android:importantForAccessibility="yes" android:textAlignment="viewEnd" android:layout_alignParentEnd="true" style="?attr/guidanceDescriptionStyle"/>
        <ProgressBar android:id="@+id/progressbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/system_update_progressbar_margin_top" android:indeterminate="false" android:layout_below="@+id/percentage_text" style="?android:attr/progressBarStyleHorizontal"/>
    </RelativeLayout>
</FrameLayout>
