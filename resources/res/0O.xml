    <TextView android:textSize="@dimen/gh_legal_text_font_size" android:textColor="?attr/gh_primaryTextColor" android:id="@+id/gh_application_info_and_privacy_policy" android:background="?attr/gh_legalTextBackgroundColor" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="@dimen/gh_legal_text_extra_line_spacing"/>
</LinearLayout>
