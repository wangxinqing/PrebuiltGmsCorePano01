<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:chimera="http://schemas.android.com/chimera" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/gh_MainBackgroundStyle">
    <include layout="@layout/gh_section_divider"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:divider="?attr/gh_divider" android:layout_weight="1" android:showDividers="middle">
        <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:enabled="false" android:id="@+id/gh_chat_request_form_account_email" android:paddingLeft="24dp" android:paddingTop="18dp" android:paddingRight="24dp" android:paddingBottom="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/gh_ChatRequestFormEmailStyle"/>
        </HorizontalScrollView>
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="24dp" android:layout_marginRight="16dp" android:hint="@string/gh_describe_your_issue_required" style="@style/Widget.GoogleMaterial.TextInputLayout.OutlinedBox">
